	public static void main(String[] args) {
		String g="google";
		System.out.println(g.length());
		char c[]= g.toCharArray();
		for (int i = 0; i <= c.length-1; i++) 
		{
			System.out.print(c[i]);
		}
		System.out.println(" ");
		
			
		}
	}

