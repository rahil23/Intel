package BatlaList;

public class Linklist {

	Node head;
	
	public Linklist() {
		Node dummyNode = new Node();
		//node.setNext(null);
		head=dummyNode;
		head.setName("head");
	}
	
	
	void add(int data)
	{
		Node node = new Node();
		node.setData(data);
		node.setNext(null);
		
		node.setName("node");
		
		if(head.next==null)
		{
			head.next=node;
				
		}
		else
		{
			
			Node temp=head;
			while(temp.next!=null)
			{
				temp= temp.next;
			}
			temp.setNext(node);
		}
		
		/*Node node1 = new Node();
		node1.setData(6);
		node1.setNext(null);
		node.setNext(node1);
		node1.setName("node1");
		
		Node node2 = new Node();
		node2.setData(7);
		node2.setNext(null);
		node1.setNext(node2);
		node2.setName("node2");
		*/
		
	}
	
	
	@Override
	public String toString() {
		
		Node temp=head;
		while(temp.next!=null)
		{
			
			temp= temp.next;
			System.out.println(temp.data);
		}
		
		return "";
	}
} 
